<h2>Giải phương trình bậc 2: ax² + bx + c = 0</h2>

<form method="post" asp-action="PTB2" asp-controller="Demo">
    <label>a:</label>
    <input type="number" step="any" name="a" required /><br /><br />

    <label>b:</label>
    <input type="number" step="any" name="b" required /><br /><br />

    <label>c:</label>
    <input type="number" step="any" name="c" required /><br /><br />

    <button type="submit">Giải phương trình</button>
</form>

@if (ViewBag.Result != null)
{
    <h3 style="color:blue">@ViewBag.Result</h3>
}
